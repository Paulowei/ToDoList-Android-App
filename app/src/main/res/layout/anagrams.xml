<?xml version = "1.0" encoding ="UTF-8"?>

<LinearLayout
xmlns:tools = "http://schemas.android.com/apk/tools"
xmlns:android = "http://schemas.android.com/apk/res/android"
xmlns:app = "http://schemas.android.com/apk/res-auto"
android:layout_height ="match_parent"
android:layout_width = "match_parent"
android:gravity =  "center"
android:id = "@+id/anagrams_1"
android:orientation="vertical"
android:background ="@color/anagrams_color_1">
    <LinearLayout
    android:layout_gravity ="center" 
    android:gravity = "center" 
    android:layout_width ="match_parent"
    android:layout_height ="match_parent"
    android:id = "@+id/anagrams_1_1"
    android:orientation ="vertical"
    android:background="@color/anagrams_color_2">
    <RelativeLayout
    android:layout_margin ="@dimen/container_margin_2"
    android:padding ="@dimen/container_padding_3"
    android:layout_height ="wrap_content"
    android:layout_width = "match_parent" 
    android:background ="@color/anagrams_color_3"
    android:id = "@+id/anagrams_1_1_1">
        <TextView
        android:text = "@string/string_hint_3"
        android:layout_height = "wrap_content"
        android:layout_width ="match_parent"
        android:layout_margin ="@dimen/content_margin_3"
        android:layout_centerInParent = "true"
        android:background = "@color/anagrams_color_7"
        android:id ="@+id/anagrams_1_1_1_1"
        android:padding ="@dimen/content_padding_3"/>
    </RelativeLayout>
        <LinearLayout
        android:orientation= "vertical"
        android:layout_height ="wrap_content"
         android:layout_width = "match_parent"
         android:padding = "@dimen/container_padding_2"
        android:layout_margin ="@dimen/container_margin_3"
         android:background = "@color/anagrams_color_4"
         android:id = "@+id/anagrams_1_1_2">
            <EditText
            android:layout_margin ="@dimen/content_margin_3"
            android:padding = "@dimen/content_padding_3"
             android:layout_gravity ="center_horizontal"
             android:gravity = "center" 
            android:layout_height ="wrap_content"
            android:layout_width = "match_parent"
            android:hint ="@string/string_hint_2"
            android:background = "@color/anagrams_color_7"
            android:id ="@+id/anagrams_1_1_2_1" />
            <EditText
            android:padding="@dimen/content_padding_3"
            android:layout_margin ="@dimen/content_margin_3"
            android:gravity= "center"
            android:layout_gravity = "center_horizontal"
            android:hint =  "@string/string_hint_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background = "@color/anagrams_color_8"
            android:id ="@+id/anagrams_1_1_2_2"/>
        </LinearLayout>
        <!--     android:layout_gravity = "bottom|center_horizontal" -->
        <LinearLayout
        android:layout_gravity = "center_horizontal|center_vertical"
        android:orientation ="horizontal"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:layout_margin ="@dimen/container_margin_2"
       android:background = "@color/anagrams_color_5"
       android:id ="@+id/anagrams_1_1_3"
       android:padding ="@dimen/container_padding_3"
       android:gravity = "center_horizontal|center_vertical">
       <!--  android:layout_gravity = "center_vertical|center_horizontal" -->
            <Button
            android:layout_gravity = "center_horizontal|center_vertical"
            android:layout_height ="@dimen/button_height_1"
            android:layout_width = "@dimen/button_width_1"
            android:gravity ="center" 
            android:layout_margin ="@dimen/button_height_1"
            android:background = "@color/anagrams_color_6"
            android:id = "@+id/anagrams_1_1_3_1"
            android:text = "@string/anagrams_check_1"
            android:padding = "@dimen/content_padding_2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



