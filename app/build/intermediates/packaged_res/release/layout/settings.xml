<?xml version = "1.0" encoding = "UTF-8"?>
<LinearLayout
xmlns:tools = "http://schemas.android.com/tools"
xmlns:app = "http://schemas.android.com/apk/res-auto"
xmlns:android = "http://schemas.android.com/apk/res/android"
android:orientation = "vertical"
android:background  = "@color/login_color_6"
android:id  = "@+id/settings_1"
android:layout_width = "match_parent"
android:layout_height = "match_parent"
 android:gravity =  "center">
    <ScrollView
    android:layout_margin = "@dimen/container_margin_3"
    android:padding = "@dimen/container_padding_3"
    android:layout_height = "match_parent"
    android:layout_width = "match_parent"
    android:id= "@+id/settings_1_1"
    android:fillViewport = "true">    
        <LinearLayout
        android:padding = "@dimen/container_padding_3"
        android:layout_margin = "@dimen/container_margin_2"
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent"
        android:id = "@+id/settings_1_1_1"
        android:orientation = "vertical"
        android:layout_gravity = "top">
            <RelativeLayout
            android:padding = "@dimen/container_padding_3"
            android:layout_margin = "@dimen/container_margin_3"
            android:layout_gravity = "center_horizontal"
            android:id ="@+id/settings_1_1_1_1"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content">
                <TextView
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_gravity ="center_horizontal"
                android:layout_margin = "@dimen/content_margin_2"
                android:padding = "@dimen/content_padding_3"
                android:id = "@+id/settings_1_1_1_1_1">
                </TextView>
             </RelativeLayout>
            <LinearLayout
            android:layout_gravity = "center_horizontal"
            android:orientation= "vertical"
            android:layout_height ="wrap_content"
            android:layout_width = "match_parent"
            android:id ="@+id/settings_1_1_1_2"
            android:padding= "@dimen/container_padding_3"
            android:layout_margin ="@dimen/container_margin_3">

             </LinearLayout>
        </LinearLayout>
    </ScrollView>

 </LinearLayout>