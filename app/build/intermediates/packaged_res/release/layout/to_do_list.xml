<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout
xmlns:android = "http://schemas.android.com/apk/res/android"
xmlns:tools = "http://schemas.android.com/apk/tools"
xmlns:app = "http://schemas.android.com/apk/res-auto"
android:layout_height = "match_parent"
android:layout_width ="match_parent"
android:gravity ="center"
android:id ="@+id/to_do_list_1"
android:background ="@color/to_do_list_color_4">
    <LinearLayout
    android:orientation ="vertical"
    android:gravity ="center"
    android:layout_margin ="@dimen/container_margin_3"
    android:padding ="@dimen/container_padding_2"
     android:layout_height = "match_parent"
     android:layout_width=  "match_parent"
     android:id ="@+id/to_do_list_1_1"
     android:background ="@color/to_do_list_color_4">
        <RelativeLayout
        android:padding ="@dimen/container_padding_2"
        android:layout_margin= "@dimen/container_margin_3"
        android:layout_height ="wrap_content"
        android:layout_width = "wrap_content"
        android:id ="@+id/to_do_list_1_1_1"
        android:layout_gravity = "top" 
        android:background ="@color/to_do_list_color_5">
        <!--android:layout_gravity = "top"-->
        <TextView
        android:layout_margin ="@dimen/content_margin_2"
        android:padding ="@dimen/content_padding_3"
        android:layout_height = "wrap_content"
        android:textSize  = "17sp"
        android:layout_width ="match_parent"
        android:id = "@+id/to_do_list_1_1_1_1"
        android:text = "@string/to_do_text_5"
        android:background ="@color/to_do_list_color_6"
        android:layout_gravity ="top"/>
        </RelativeLayout>
       <!--  android:layout_height ="@dimen/to_do_container_height_1"-->
        <LinearLayout
        android:layout_gravity = "top"
        android:layout_margin = "@dimen/container_margin_2"
         android:padding= "@dimen/container_padding_3"
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent"
        android:orientation= "vertical"
        android:id ="@+id/to_do_list_1_1_3"
        android:background ="@color/to_do_list_color_5">
            <EditText
            android:padding ="@dimen/content_padding_2"
            android:layout_margin ="@dimen/content_margin_3"
            android:layout_gravity ="center"
            android:hint  = "@string/to_do_hint_1"
            android:layout_height ="@dimen/to_do_text_height_1"
            android:layout_width="match_parent"
            android:id = "@+id/to_do_list_1_1_3_1"
            android:background ="@color/to_do_list_color_6"/>
        </LinearLayout>
        <RelativeLayout
        android:layout_gravity ="top"
         android:layout_margin ="@dimen/container_margin_3"
        android:padding = "@dimen/container_padding_2"
        android:layout_height = "wrap_content"
        android:layout_width = "match_parent"
        android:background = "@color/anagrams_color_5"
        android:id = "@+id/to_do_list_1_1_4">
            <Button
            android:layout_height = "wrap_content"
            android:layout_width = "wrap_content"
            android:layout_margin ="@dimen/content_margin_3"
            android:padding = "@dimen/content_padding_2"
            android:layout_alignParentLeft = "true"
            android:background ="@color/main_color_3"
            android:text = "@string/to_do_remove_text"
            android:id  =  "@+id/to_do_list_1_1_4_1"/>
            <Button
            android:layout_alignParentRight ="true"
            android:layout_height ="wrap_content"
            android:layout_width =  "wrap_content"
            android:layout_margin ="@dimen/content_margin_2"
            android:padding = "@dimen/content_padding_2"
            android:background = "@color/main_color_4"
            android:text = "@string/to_do_add_text"
            android:id ="@+id/to_do_list_1_1_4_2"/>
        </RelativeLayout>
            <Button
            android:layout_width = "fill_parent"
             android:layout_height = "wrap_content"
              android:id = "@+id/to_do_list_1_1_4_5"
            android:padding = "@dimen/content_padding_2"
            android:layout_margin = "@dimen/content_margin_3"
            android:textSize = "@dimen/text_size_preset_6"
            android:text =  "@string/save_text_string_5"
            android:layout_gravity = "center_horizontal"  />
           <ScrollView
        android:layout_width ="fill_parent"
        android:layout_height ="wrap_content"
        android:layout_margin ="@dimen/container_margin_3"
        android:padding ="@dimen/container_padding_3"
        android:gravity = "center"
        android:id = "@+id/to_do_list_1_1_2"
        android:background ="@color/to_do_list_color_4">
        <LinearLayout
        android:layout_height ="wrap_content"
        android:layout_width = "match_parent"
        android:gravity = "center"
        android:layout_margin ="@dimen/container_margin_2"
        android:padding= "@dimen/container_padding_3"
        android:background ="@color/to_do_list_color_5"
        android:orientation="vertical"
        android:layout_gravity = "center"
        android:id ="@+id/to_do_list_1_1_2_1">
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>